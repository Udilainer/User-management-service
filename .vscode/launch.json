{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}", // Runs the current file
            "purpose": ["debug-test"], // Identifies this as a test configuration
            "console": "integratedTerminal",
            "justMyCode": true, // Set to false if you need to step into library code
            "cwd": "${workspaceFolder}", // IMPORTANT: Set current directory to project root
            "env": {
                "PYTHONPATH": "${workspaceFolder}" // Instructs Python to add that directory to `sys.path` upon startup
            }
        },
        {
            "name": "Pytest: Debug Current File",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "${file}" // Or specific test node like "${file}::test_name"
            ],
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ]
}